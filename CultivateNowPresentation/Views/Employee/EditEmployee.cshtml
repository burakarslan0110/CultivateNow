@model EntityLayer.Concrete.Employee
@{
    ViewData["Title"] = "AddEmployee";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Çalışanı Düzenle</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.EmployeeID)
                <div class="form-group">
                    <label for="exampleInputName1">Adı Soyadı</label>
                    <span asp-validation-for="EmpNameSurname" class="text-danger"></span>
                    <input type="text" asp-for="EmpNameSurname" class="form-control" id="EmpNameSurname">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görev</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                    <input type="text" asp-for="Title" class="form-control" id="Title
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel Yolu</label>
                    <span asp-validation-for="Image" class="text-danger"></span>
                    <input type="text" asp-for="Image" class="form-control" id="Image
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Facebook Hesabı</label>
                    <input type="text" asp-for="FacebookURL" class="form-control" id="FacebookURL">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Instagram Hesabı</label>
                    <input type="text" asp-for="InstagramURL" class="form-control" id="InstagramURL">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

