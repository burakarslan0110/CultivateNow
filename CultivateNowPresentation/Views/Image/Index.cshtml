@using EntityLayer.Concrete
@model List<Image>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-lg-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Görsel Listesi</h4>
            <div class="table-responsive pt-3">
                <table class="table table-bordered">
                    <thead>
                        <tr>
                           <th>ID</th>
                           <th>Başlık</th>
                           <th>Açıklama</th>
                           <th>Sil</th>
                           <th>Düzenle</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            <tr>
                                <td>@item.ImageID</td>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td><a href="/Image/DeleteImage/@item.ImageID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Image/EditImage/@item.ImageID" class="btn btn-outline-warning">Güncelle</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
                <br />
                <a href ="/Image/AddImage" class="btn btn-outline-info">Yeni Görsel Girişi</a>
            </div>
        </div>
    </div>
</div>




