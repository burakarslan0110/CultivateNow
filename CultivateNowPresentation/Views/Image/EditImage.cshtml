@model EntityLayer.Concrete.Image
@{
    ViewData["Title"] = "EditImage";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Görsel Kaydı</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ImageID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="Title">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Görsel</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" asp-for="Description">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Açıklama</label>
                    <input type="text" class="form-control" id="exampleTextarea1" rows="4" asp-for="ImageURL">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

