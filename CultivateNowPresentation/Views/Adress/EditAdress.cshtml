@model EntityLayer.Concrete.Adress
@{
    ViewData["Title"] = "EditAdress";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Hizmet Düzenleme</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.AdressID)
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 1</label>
                    <input type="text" asp-for="Description1" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 2</label>
                    <input type="text" asp-for="Description2" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Açıklama 3</label>
                    <input type="text" asp-for="Description3" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Telefon Numarası</label>
                    <input type="text" asp-for="Phone" class="form-control" id="exampleInputName1">
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Harita Bilgisi</label>
                    <input type="text" asp-for="MapInfo" class="form-control" id="exampleInputName1">
                </div>
                <button type="submit" class="btn btn-outline-info">Kaydet</button>
            </form>
        </div>
    </div>
</div>

