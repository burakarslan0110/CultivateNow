@model EntityLayer.Concrete.Contact
@{
    ViewData["Title"] = "MessageDetails";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Mesaj Detayları</h4>
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x => x.ContactID)
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="NameSurname">
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">E-Posta Adresi</label>
                    <input type="text" class="form-control" id="exampleInputEmail3" asp-for="Mail">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Tarih</label>
                    <input type="text" class="form-control" id="exampleTextarea1" rows="4" asp-for="Date">
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Mesaj</label>
                    <textarea class="form-control" cols="5" rows="20" asp-for="Message"></textarea>
                </div>
            </form>
        </div>
    </div>
</div>